<link rel="stylesheet" href="css/profile.css">
{{#if logged_in}}
<h1>Welcome {{username}}!</h1>

    <h2 style="text-align: center;">My Posts</h2>
        <div class="grid-container">
            {{#each posts}}
            <div class="card">
                <div class="card-image">
                        <img src="{{ img }}" alt="placeholder image">
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <h2><a href="/post/{{ id }}">{{ title }}</a></h2>
                            <h3 class="subtitle is-6">Created by: {{ user.username }} on {{ format_date created_on}}
                            </h3>
                        </div>
                    </div>
                    <div class="content">
                        <div class="box">
                            <article class="media">
                                <div class="media-content">
                                    <div class="content">
                                        <p>
                                            {{ description }}
                                        </p>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                    <footer class="card-footer is-justify-content-center">
                                  <button class="main-button post-list" data-id="{{ id }}">
            <span data-id="{{ id }}">Delete</span>
            <svg data-id="{{ id }}" width="34" height="34" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="37" cy="37" r="35.5" stroke="black" stroke-width="3"></circle>
              <path d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z" fill="black"></path>
            </svg>
          </button>
                    </footer>
                </div>
            </div>
            {{/each}}

            {{else}}
            <a class="is-flex is-justify-content-center pt-6" href="/login">You must login first to view this page</a>
            {{/if}}
        </div>

<script src="./js/profile.js"></script>
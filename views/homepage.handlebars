{{! displays all posts only if logged in}}
{{! Otherwise show login page }}
{{#if logged_in}}
<h1>Community Posts</h1>
<div class="homepage-container">
  <div class="community-posts">
    {{#each posts as |post|}}
    <div class="community-post">
      <div class="community-image">
        <img src="{{post.img}}" alt="sample" />
      </div>
      <div class="community-info">
        <h2>{{post.title}}</h2>
        <div class="creator-details">
          <img class="randomImage" />
          <h3>Created By: <span>{{post.user.username}}</span> on {{format_date post.created_on}}</h3>
        </div>
        <p>{{post.description}}</p>
        <a href="/post/{{post.id}}">
          <button class="main-button">
            <span>View</span>
            <svg width="34" height="34" viewBox="0 0 74 74" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="37" cy="37" r="35.5" stroke="black" stroke-width="3"></circle>
              <path d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z" fill="black"></path>
            </svg>
          </button>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
  <aside class="featured-post">
    <h2>Featured Posts</h2>
  <div class="featured-details">
    <img src="{{posts.5.img}}" alt="sample" />
    <div class="featured-date">
    <a href="/post/6"><h3>{{posts.5.title}}</h3></a>
    <div style="display: flex; justify-content: flex-end;">
  <h3>{{format_date posts.5.created_on}}</h3>
  </div>
    </div>
    </div>
  <div class="featured-details">
    <img src="{{posts.6.img}}" alt="sample" />
    <div class="featured-date">
    <a href="/post/7"><h3>{{posts.6.title}}</h3></a>
    <div style="display: flex; justify-content: flex-end;">
  <h3>{{format_date posts.6.created_on}}</h3>
  </div>
    </div>
    </div>
  </aside>
</div>
  <div class="add-section">
    <button class="add-post"><a href="/post">+</a></button>
  </div>
{{/if}}

<script>
  var imageList = [ "../images/icons/sea-turtle.gif", "../images/icons/beagle.gif",
  "../images/icons/bird.gif","../images/icons/shrimp.gif",
"../images/icons/fish.gif" ]; var imgElements =
  document.querySelectorAll(".randomImage");
  imgElements.forEach(function(imgElement) { var randomIndex =
  Math.floor(Math.random() * imageList.length); imgElement.src =
  imageList[randomIndex]; });
</script>
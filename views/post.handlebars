
<div class="row">
  <div class="col-auto">
    <strong class="postWelc">Welcome, {{ user.username }}!</strong>
  </div>
</div>


<div id="postBox">
  <div class="row mt-4">
    <div class="col-md-6">
      <strong id="createNew">Create a New Post!</strong>


      <form class="form new-project-form">
        <div id="postyBox" class="form-group">
          <label id="postTitle" for="project-name">post title:</label>
          <input class="form-input" type="text" id="project-name" name="project-name" />
        </div>
        <span id="imgBox">
          <strong id="addImage">Add an image of the giraffe/cow/shrimp</strong>
          <span class="file is-boxed">
            <label class="file-label">
              <input class="file-input" type="file" name="resume">
            </label>
          </span>
        </span>


        <span class="field">
          <div class="control">
            <div class="field">
              <div class="form-group" id="theText">
                <label id="description" for="project-desc">Description:</label>
                <textarea class="textarea" id="project-desc" name="project-desc"
                  placeholder="enter cow , shrimp or giraffe description here"></textarea>
                <!-- <textarea class="form-input" id="project-desc" name="project-desc"></textarea> -->
              </div>
              <!-- <input class="input is-success" type="text" placeholder="Text input" value="bulma"> -->
              <span id="littleIcon">
                <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fas fa-check"></i>
                </span>
              </span>
            </div>
          </div>
        </span>
        <div id="theButtons" class="field is-grouped">
          <div class="control">
            <button id="submitBtn" class="button is-link" type="submit"> Submit </button>
          </div>
          <div class="control">
            <button class="button is-link is-light">Cancel</button>
          </div>
        </div>
      </form>
    </div>
